{% if device['ansible_network_resources']['vlans'] is defined and device['ansible_network_resources']['vlans']|length > 0 %}
<table class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>vlan_id</th>
            <th>Name</th>
            <th>state</th>
        </tr>
    </thead>
    <tbody>
{% for vlan in device['ansible_network_resources']['vlans'] %}
        <tr>
            <td>{{ vlan['vlan_id'] }}</td>
            <td>{{ vlan['name'] | default("none") }}</td>
            <td>{{ vlan['state'] | default("default") }}</td>
        </tr>
{% endfor %}
    </tbody>
</table>
{% elif device['ansible_network_resources']['vlans'] is defined and device['ansible_network_resources']['vlans']|length == 0 %}
VLANs are not configured on this device
{% else %}
No VLAN information available
{% endif %}